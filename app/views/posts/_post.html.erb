<article id="<%=@post.errors.count > 0 ? 'errorMessage' : 'post' %>" class="<%=@post.errors.count > 0 ? 'white-text red' : '' %>">
    <%= @post.errors.count > 0 ? "Error: #{@post.errors.full_messages[0]}" : post.titulo %>
</article>


<script>
    $('document').ready(function() {
        setTimeout(function() {
            $('#errorMessage').slideUp();
        }, 3000);
    });
</script>