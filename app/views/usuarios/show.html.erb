<div class="no-padding big-margin" >
    <div class="d-flex justify-content-center align-items-center">
        <div class="col-sm-12 col-lg-10">
            <article class="white-text large-padding blue">
                <div class="big-padding white-text text-left cover" style="background-image:  url(<%=@user.cover.attached? ? url_for(@user.cover) : '/missing_cover.jpg'%>);">
                    <%= circle_img  @user.avatar.attached? ? url_for(@user.avatar) : '/minion.jpg', 100 %>
                </div>
                <div class="text-center border-bottom">
                    <%= @user.email %>
                </div>
                <div class="d-flex justify-content-around">
                    <div>
                        Seguidores
                    </div>
                    <div>
                        <%= @user.posts.count %> Post
                    </div>
                </div>
            </article>
            
            <% if @its_me %>
                <div>
                    <%= form_for(@user) do |f| %>
                        <div class="field">
                            <div class="input-group">
                            <span class="icon-background"><i class="fas fa-user-tag"></i></span>
                            <%= f.file_field :avatar, class: 'form-control' %>
                        </div>
                        <div class="field">
                            <div class="input-group">
                            <span class="icon-background"><i class="fas fa-images"></i></span>
                            <%= f.file_field :cover, class: 'form-control' %>
                        </div>
                        <div class="field">
                            <div class="input-group">
                            <span class="icon-background"><i class="fas fa-signature"></i></span>
                            <%= f.text_field :nombre, class: 'form-control' %>
                            </div>
                        </div>
                        <div class="field">
                            <div class="input-group">
                            <span class="icon-background"><i class="fas fa-signature"></i></span>
                            <%= f.text_field :apellido, class: 'form-control' %>
                            </div>
                        </div>
                        <div class="field">
                            <div class="input-group">
                            <span class="icon-background"><i class="fas fa-book"></i></span>
                            <%= f.text_area :bio, class: 'form-control' %>
                            </div>
                        </div>
                        <br>
                        <div class="actions text-center">
                            <%= f.submit "Actualizar", class: 'btn btn-primary' %>
                        </div>
                    <% end %>
                </div>          
            <% end %>
        </div>
    </div>
</div>