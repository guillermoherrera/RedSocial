<div class="no-padding big-margin" >
    <div class="d-flex justify-content-center align-items-center">
        <div class="col-sm-12 col-lg-10">
            <article class="white-text large-padding blue">
                <div id="user-cover" class="big-padding white-text text-left cover relative" style="background-image:  url(<%=@user.cover.attached? ? url_for(@user.cover) : '/missing_cover.jpg'%>);">
                    <% if @its_me %>
                        <%= render 'menu_avatar' %>
                    <% end %>
                    <div id="user-avatar">
                        <%= circle_img  @user.avatar.attached? ? url_for(@user.avatar) : '/minion.jpg', 100 %>
                    </div>
                </div>
                <div class="text-center">
                    <%= @user.email %>
                </div>
                <div class="text-right border-bottom">
                    <%= button_to friendships_path({friend_id: @user.id}), method: :post, remote: true, class: "btn btn-success btn-circle medium-margin" do %>
                        <span><i class="fas fa-user-plus"></i></span>
                    <% end %>
                </div>
                <div class="d-flex justify-content-around">
                    <div>
                        Seguidores
                    </div>
                    <div>
                        <%= @user.posts.count %> Post
                    </div>
                </div>
            </article>
            
            <% if @its_me %>
                <div>
                    <%= form_for(@user, remote: true) do |f| %>
                        <div style="display:none">
                            <%= f.file_field :avatar, class: 'form-control remotipart', for:"#submitAvatar" %>
                            <%= f.submit "Actualizar", id: "submitAvatar", class: 'btn btn-primary' %>
                        </div>
                    <% end %>
                    <%= form_for(@user, remote: true) do |f| %>
                        <div style="display:none">
                            <%= f.file_field :cover, class: 'form-control remotipart', for:"#submitCover" %>  
                            <%= f.submit "Actualizar", id: "submitCover", class: 'btn btn-primary' %>      
                        </div>
                    <% end %>
                    <%= form_for(@user) do |f| %>
                        <div class="field">
                            <div class="input-group">
                            <span class="icon-background"><i class="fas fa-signature"></i></span>
                            <%= f.text_field :nombre, class: 'form-control' %>
                            </div>
                        </div>
                        <div class="field">
                            <div class="input-group">
                            <span class="icon-background"><i class="fas fa-signature"></i></span>
                            <%= f.text_field :apellido, class: 'form-control' %>
                            </div>
                        </div>
                        <div class="field">
                            <div class="input-group">
                            <span class="icon-background"><i class="fas fa-book"></i></span>
                            <%= f.text_area :bio, class: 'form-control' %>
                            </div>
                        </div>
                        <br>
                        <div class="actions text-center">
                            <%= f.submit "Actualizar", class: 'btn btn-primary' %>
                        </div>
                    <% end %>
                </div>          
            <% end %>
        </div>
    </div>
</div>
<div id="snackbar">Some text some message..</div>